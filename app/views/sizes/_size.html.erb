<%# En este archivo mostramos las tallas una a una %>
<% if size.talla != nil %>
  <%= form_with model: [ @producto,size ] do |f|%>
    <%= f.hidden_field :id, :value => size.id %>
    Talla: <%= f.text_field :talla, :value => size.talla, :readonly => true  %>
    Stock: <%= f.number_field :stock, :value => size.stock, :min =>  0 %>
    <%= f.submit "Editar stock ", :class => 'btn btn-outline-dark flex-shrink-0' %>
  <% end %>
<% end %>