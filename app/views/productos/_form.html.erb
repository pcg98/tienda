<%= form_for @producto, class:"form-inline", role:"form" do |form| %>

  <%# nombre %>
  <div class="form-group">
    <%= form.label :nombre %>
    <%= form.text_field :nombre %>
    <% producto.errors.full_messages_for(:nombre).each do
      |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <%# marca %>
  <div class="form-group">
    <%= form.label :marca, class:"sr-only" %>
    <br>
    <%= form.text_field :marca %>
    <% producto.errors.full_messages_for(:marca).each do
    |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <%# precio %>
  <div>
    <%= form.label :precio %>
    <%= form.text_field :precio %>
    <% producto.errors.full_messages_for(:precio).each do
    |message| %>
      <div><%= message %></div>
    <% end %>
  </div>


  <%# categoria %>
  <div>
    <%= form.label :categoria  %>
    <%= form.select :categoria, ['Zapatillas','Sudaderas','Camisetas','Otros'] %>
  </div>

  <%# sexo %>
  <div>
    <%= form.label :sexo %>
    <%= form.select :sexo, ['M','H','N'] %>
  </div>


  <div>
    <%= form.file_field :image %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>