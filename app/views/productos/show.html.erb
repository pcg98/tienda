<%= link_to "Back", productos_path %>

<!-- Product section-->
<section class="py-5">
  <div class="container px-4 px-lg-5 my-5">
    <div class="row gx-4 gx-lg-5 align-items-center">
      <div class="col-md-6">
        <% if @producto.image.attached? %>
          <%= image_tag @producto.image, class:'card-img-top mb-5 mb-md-0' %>
        <% else %>
          <img class="card-img-top mb-5 mb-md-0" src="https://dummyimage.com/600x700/dee2e6/6c757d.jpg" alt="..." /></div>
        <% end %>
      </div>
      <div class="col-md-6">
        <h1 class="display-5 fw-bolder"><%= @producto.nombre %></h1>
        <div class="fs-5 mb-5">
          <span><%= @producto.precio %> â‚¬</span>
        </div>
        <p class="lead">Precio: <%= @producto.precio %>, Categoria: <%= @producto.categoria %>, Sexo: <%= @producto.sexo %></p>
        <%# Mostramos las tallas comprobando que hay stock %>
        <p class="lead">
          <select name="producto[talla]">
            <% @producto.sizes.all.each do |size| %>
              <% if size.stock > 0 %>
                <option value=<%= size.talla %>> <%= size.talla%></option>
              <% end %>
            <% end %>
          </select>
        </p>
        <div class="d-flex">
          <input class="form-control text-center me-3" id="inputQuantity" type="num" value="1" style="max-width: 3rem" />
          <button class="btn btn-outline-dark flex-shrink-0" type="button">
            <i class="bi-cart-fill me-1"></i>
            Add to cart
          </button>
        </div>
      </div>
    </div>
  </div>
</section>
<div>
  <ul>
    <% if can? :destroy, Producto %>
      <li>
        <%= link_to "Edit", edit_producto_path(@producto) %>
      </li>
      <%= render "sizes/form" %>
      <%# Esto es para borrar las tallas ya existentes %>
      <%= render @producto.sizes %>
    <% end %>
    <li>
      <%= button_to 'Destroy', @producto, method: :delete,
                    form: {data: {turbo_confirm: 'Are you sure?'}} %>
    </li>
  </ul>
</div>
