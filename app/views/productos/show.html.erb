

<!-- Product section-->
<section class="py-5">
  <div class="container px-4 px-lg-5 my-5">
    <div class="row gx-4 gx-lg-5 align-items-center">
      <div class="col-md-6">
        <% if @producto.image.attached? %>
          <%= image_tag @producto.image, class:'card-img-top mb-5 mb-md-0' %>
        <% else %>
          <img class="card-img-top mb-5 mb-md-0" src="https://dummyimage.com/600x700/dee2e6/6c757d.jpg" alt="..." /></div>
        <% end %>
      </div>
      <div class="col-md-6">
        <h1 class="display-5 fw-bolder"><%= @producto.nombre %></h1>
        <div class="fs-5 mb-5">
          <span><%= @producto.precio %> €</span>
        </div>
        <%# Mensaje de error cuando pilla stock de mas o lo que sea%>
        <% flash.each do |key, value| %>
          <div class="<%= flash_class(key) %>">
            <%= value %>
          </div>
        <% end %>
        <p class="lead">Categoria: <%= @producto.categoria %>, Sexo: <%= @producto.sexo %></p>
        <%# Mostramos las tallas comprobando que hay stock %>
        <p class="lead">
        </p>
        <% if usuario_signed_in? %>
          <div class="d-flex">
            <%= form_for @linea_factura do |f|%>
              <%= f.hidden_field :producto_id, :value => @producto.id %>
              <%= f.number_field :unidades, :value => 1, :min =>  1, class: "form-control text-center me-3", style: "max-width: 5rem", id: "inputQuantity" %>
              <%= f.select :size_id, @producto.sizes.map { |s| [s.talla, s.id]}, {}, class: "form-select text-center", style: "max-width: 5rem" %>
              <%= f.button nil, :class => "btn btn-outline-dark flex-shrink-0", type:"button" do %>
                <i class="bi-cart-fill me-1"></i>
                Añadir al carrito
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
<div>
  <ul>
    <% if can? :destroy, Producto %>
      <li>
        <%= link_to "Edit", edit_producto_path(@producto) %>
      </li>
      <%= render "sizes/form" %>
      <%# Esto es para borrar las tallas ya existentes %>
      <%= render @producto.sizes %>
    <% end %>
    <li>
      <%= button_to 'Destroy', @producto, method: :delete,
                    form: {data: {turbo_confirm: 'Are you sure?'}} %>
    </li>
  </ul>
</div>
