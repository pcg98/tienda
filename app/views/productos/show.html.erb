<%= link_to "Back", productos_path %>
<h1> <%= @producto.nombre %></h1>
  <% if @producto.image.attached? %>
    <p> <%= image_tag @producto.image %></p>
  <% end %>
  <p>Precio: <%= @producto.precio %></p>
  <p>Stock: <%= @producto.stock %></p>
  <p>Categoria: <%= @producto.categoria %></p>
  <p>Sexo: <%= @producto.sexo %></p>
  <div>
    <ul>
      <% if can? :destroy, Producto %>
        <li>
          <%= link_to "Edit", edit_producto_path(@producto) %>
        </li>
      <% end %>
      <li>
        <%= button_to 'Destroy', @producto, method: :delete,
                      form: {data: {turbo_confirm: 'Are you sure?'}} %>
      </li>
    </ul>
  </div>