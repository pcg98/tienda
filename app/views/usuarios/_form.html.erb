<%= form_with model: usuario do |f| %>
  <% if @usuario.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @usuario.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>
  <%= f.label :telefono %>
  <%= f.text_field :telefono %>

  <%= f.label :nombre %>
  <%= f.text_field :nombre %>

  <%= f.label :apellidos %>
  <%= f.text_field :apellidos %>
  <div class="field">
    <%= f.label :rol_id %>
    <%= f.text_field :rol_id %>
  </div>

  <div>
    <%= f.submit "Login" %>
  </div>
<% end %>